{
	"name": "power-of-two",
	"private": true,
	"version": "1.4.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"format": "prettier . --write",
		"preview": "vite preview",
		"test": "vitest --disable-console-intercept=true",
		"generate:levels": "vite-node ./src/features/editor/scripts/create-levels/",
		"generate:episodes": "vite-node ./src/features/editor/scripts/update-episodes/",
		"prepare": "husky"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/github",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			"@semantic-release/git"
		]
	},
	"dependencies": {
		"@codenamize/codenamize": "^1.1.1",
		"command-line-args": "^5.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hotkeys-hook": "^4.5.0",
		"react-swipeable": "^7.0.1",
		"react-use-clipboard": "^1.0.9",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@digitalex/eslint-config": "^1.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/command-line-args": "^5.2.3",
		"@types/react": "^18.2.56",
		"@types/react-dom": "^18.2.19",
		"@types/uuid": "^9.0.8",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint": "^8.56.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5",
		"typescript": "^5.4.2",
		"vite": "^5.1.4",
		"vitest": "^1.3.1"
	}
}
